
<%= form_with url: tasks_path(filters: filters),
  method: method,
  class: 'container mx-auto my-6' do
%>
  <% if defined?(task) %>
    <%= hidden_field_tag(:task, task) %>
  <% end %>

  <%= text_area_tag(
    :new_task,
    local_assigns.fetch(:task, filters.join(' ')),
    rows: '6',
    class: 'w-full border-4 border-solid border-blue-200 rounded-lg js-tasks-form-textarea',
    autofocus: true,
    'data-original-content': local_assigns.fetch(:task, '')
  ) %>

  <%= submit_tag(
    submit_text,
    class: 'w-full py-3 mt-2 rounded-lg text-white bg-green-600 hover:bg-green-800 focus:bg-green-800 font-bold cursor-pointer disabled:bg-green-600 disabled:opacity-75 disabled:cursor-auto js-tasks-form-submit',
  ) %>
<% end %>

